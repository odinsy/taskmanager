<%= simple_form_for @task do |t| %>
  <%= t.simple_fields_for :subtasks, @task.subtasks.build do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.hidden_field :priority, value: @task.priority  %>
    </div>
    <div class="form-actions">
      <%= f.button  :submit, "Добавить подзадачу" %>
    </div>
  <% end %>
<% end %>
